<mah:MetroWindow x:Class="EvidenceStudentu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Evidence studentů"
        Height="550"
        Width="900">
    
    <mah:MetroWindow.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFD7BC76"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </mah:MetroWindow.Resources>
    <!-- Hlavni okno, to podbarvene -->
    <Grid Background="#FFF8F5">

        <!-- Rozdeleni okna na 2 casti, jedna je pro hlavicku a druha pro obsah -->
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- hlavicka aplikace -->
        <Border Background="#FFEFD5">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="20,0">
                <Image Source="/Images/logo.png"
                       Width="50"
                       Margin="0,0,15,0"/>
                <TextBlock Text="StudentApp"
                           FontSize="26"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- okno bile, panel co v sobe ma tlacitka a zobrazeni studentu -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="15"
                Margin="30,30,30,10"
                Padding="30">
            <!--nastaveni vlastnosti ohraniceni-->
            <Border.Effect>
                <DropShadowEffect BlurRadius="15"
                                  ShadowDepth="3"
                                  Opacity="0.25"/>
            </Border.Effect>

            <!--rozdeleni obsahu na 2 sloupce-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- leva cast s formularem a tlacitky -->
                <StackPanel Grid.Column="0"
                            Margin="0,0,30,0">

                    <TextBlock Text="Jméno"/>
                    <TextBox Name="txtjmeno" Margin="0,5,0,15"/>

                    <TextBlock Text="Příjmení"/>
                    <TextBox Name="txtprijmeni" Margin="0,5,0,15"/>

                    <TextBlock Text="Věk"/>
                    <TextBox Name="txtvek" Margin="0,5,0,20"/>
                    <Button x:Name="btnPridejStudenta"
                            Content="Přidat studenta"
                            Margin="10"
                            
                            Click="Button_Click" Width="160"/>
                    <Button Content="Upravit" Margin="10"
                            
                            Click="Button_Click_1" Width="159"/>
                    <Button 
                            Click="Button_Click_2" Width="159" Margin="10">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="💾"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="Import studentů"/>
                        </StackPanel>
                    </Button>


                </StackPanel>

                <!-- prava cast se seznamem studentu -->
                <ListBox Name="lstbox"
                         Grid.Column="1"
                         SelectionChanged="lstboxChanged"/>

            </Grid>

        </Border>

    </Grid>
</mah:MetroWindow>
